<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter IP below"
            android:id="@+id/textView"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/ipBox" android:text="192.168.1"/>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Connect/Record"
                android:id="@+id/buttonConnect" android:singleLine="false"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Stop Recording"
                android:id="@+id/buttonStop"/>

    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#5952ff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your IP:"
            android:id="@+id/textViewIP"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Play Sounds"
                android:id="@+id/buttonStartSound"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Stop Sounds"
                android:id="@+id/buttonStopSounds"/>
    </LinearLayout>


</LinearLayout>

